{
    "files.exclude": {
        "**/.git": true,
        "**/dist": false,
    },
    "search.exclude": {
        "**/node_modules": true,
        "**/dist": true,
    },
    "editor.tabSize": 2,
    "eslint.enable": true,
    "eslint.validate": [
        "javascript",
        "typescript"
    ],
    "editor.codeActionsOnSave": {
        "source.fixAll": "explicit",
        "source.fixAll.eslint": "explicit"
    },
    "typescript.tsdk": "node_modules\\typescript\\lib",
    "typescript.preferences.importModuleSpecifier": "relative",
    "files.associations": {
        "*.json": "jsonc"
    }
}