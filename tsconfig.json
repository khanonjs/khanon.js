{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "ES2020",
    "target": "es2021",
    "lib": [
      "dom",
      "es6"
    ],
    "rootDir": "src",
    "outDir": "dist",
    "importHelpers": true,
    "declaration": false,
    "noResolve": false,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "strictFunctionTypes": true,
    "skipLibCheck": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "preserveConstEnums": true,
    "esModuleInterop": true,
    "noUnusedLocals": false
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/**/*.spec.ts"
  ],
  "types": [
    "babylonjs"
  ],
  "files": [
    "src/index.d.ts",
    "src/modules/logger/index.d.ts"
  ]
}